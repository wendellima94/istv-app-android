{
  "expo": {
    "name": "ISTV HD",
    "slug": "ISTV",
    "version": "2.0.0",
    "orientation": "default",
    
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "requireFullScreen": true,
      "supportsTablet": true
    },
    "android": { 
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "aovivo.istv"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
